{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "app",
      "host": {
        "sourcePath": "/var/app/current/app"
      }
    },
  ],
  "containerDefinitions": [
    {
      "name": "app",
      "image": "php:5.6-apache",
      "essential": true,
      "memory": 512,
      "command": [
        "/bin/bash",
        "/usr/src/app/run-prod.sh"
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "HEv3",
          "containerPath": "/var/www/html",
          "readOnly": true
        }
      ]
    },
  ]
}
